# =============================================================================
# SMARTATTEND PRODUCTION ENVIRONMENT CONFIGURATION
# Complete environment variables for production deployment
# =============================================================================

# =============================================================================
# DOMAIN AND SSL CONFIGURATION
# =============================================================================
DOMAIN=your-domain.com
NEXTAUTH_URL=https://your-domain.com
NEXT_PUBLIC_DOMAIN=your-domain.com
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=smartattend_prod
POSTGRES_USER=smartattend_user
POSTGRES_PASSWORD=your_super_secure_db_password
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=your_replication_password

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@your-domain.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# PgBouncer Configuration
PGBOUNCER_ADMIN_PASSWORD=your_pgbouncer_admin_password
PGBOUNCER_STATS_PASSWORD=your_pgbouncer_stats_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Django Settings
DJANGO_SECRET_KEY=your_super_long_secret_key_here_minimum_50_characters
DJANGO_DEBUG=False
DJANGO_LOG_LEVEL=INFO
DJANGO_SETTINGS_MODULE=config.settings.production

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis-master:6379/0
CELERY_BROKER_URL=redis://redis-master:6379/0
CELERY_RESULT_BACKEND=redis://redis-master:6379/1

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus & Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password
METRICS_PASSWORD=your_metrics_password

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=alerts@your-domain.com
SMTP_PASSWORD=your_smtp_password
ALERT_EMAIL_FROM=alerts@your-domain.com
DEFAULT_ALERT_EMAIL=admin@your-domain.com
CRITICAL_ALERT_EMAIL=critical@your-domain.com
DATABASE_TEAM_EMAIL=dba@your-domain.com
DEV_TEAM_EMAIL=dev@your-domain.com
SECURITY_TEAM_EMAIL=security@your-domain.com
OPS_TEAM_EMAIL=ops@your-domain.com

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CRITICAL_WEBHOOK=https://hooks.slack.com/services/YOUR/CRITICAL/WEBHOOK
SLACK_DB_WEBHOOK=https://hooks.slack.com/services/YOUR/DB/WEBHOOK
SLACK_DEV_WEBHOOK=https://hooks.slack.com/services/YOUR/DEV/WEBHOOK
SLACK_SECURITY_WEBHOOK=https://hooks.slack.com/services/YOUR/SECURITY/WEBHOOK
SLACK_OPS_WEBHOOK=https://hooks.slack.com/services/YOUR/OPS/WEBHOOK

# PagerDuty Configuration
PAGERDUTY_ROUTING_KEY=your_pagerduty_integration_key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# AWS S3 Backup Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BACKUP_BUCKET=smartattend-backups-prod
BACKUP_RETENTION_DAYS=30

# Backup Notifications
WEBHOOK_URL=https://your-monitoring-webhook.com/backup
PROMETHEUS_PUSHGATEWAY=http://prometheus:9091

# =============================================================================
# FTP CONFIGURATION
# =============================================================================
FTP_USER=ftpuser
FTP_PASS=your_ftp_password
PASV_ADDRESS=your-server-ip

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Keys and Secrets
API_SECRET_KEY=your_api_secret_key
JWT_SECRET_KEY=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# OAuth Configuration (if using social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Database Connection Pooling
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
ENABLE_DEBUG_TOOLBAR=false

# =============================================================================
# AWS ECS SPECIFIC CONFIGURATION
# =============================================================================

# ECS Task Definition
ECS_CLUSTER_NAME=smartattend-production
ECS_SERVICE_NAME=smartattend-app
ECS_TASK_FAMILY=smartattend-task

# Load Balancer Configuration
ALB_DNS_NAME=your-alb-dns-name.region.elb.amazonaws.com
ALB_CERTIFICATE_ARN=arn:aws:acm:region:account:certificate/certificate-id

# Auto Scaling
MIN_CAPACITY=2
MAX_CAPACITY=20
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

# =============================================================================
# FEATURE FLAGS
# =============================================================================
PROMETHEUS_METRICS_ENABLED=true
MONITORING_ENABLED=true
DEBUG_MODE=false
MAINTENANCE_MODE=false

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Email Service (SendGrid, AWS SES, etc.)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your_sendgrid_api_key

# File Storage (AWS S3, etc.)
AWS_STORAGE_BUCKET_NAME=smartattend-media-prod
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=cdn.your-domain.com

# CDN Configuration
CDN_URL=https://cdn.your-domain.com
STATIC_URL=https://cdn.your-domain.com/static/
MEDIA_URL=https://cdn.your-domain.com/media/

# =============================================================================
# DEVELOPMENT AND TESTING (Optional)
# =============================================================================

# Test Database (if needed)
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_smartattend

# Debug Configuration
DEBUG_REQUESTS=false
DEBUG_RESPONSES=false
ENABLE_PROFILING=false
